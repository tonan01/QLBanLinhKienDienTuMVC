@model QLBanLinhKienDienTuMVC.Models.SanPham

@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 style="text-align:center">CHI TIẾT SẢN PHẨM</h2>

<div class="card border-dark">
    <table class="border-dark mx-3 mb-3 mt-3">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("~/images/" +Model.Anh)" width="100%" height="100%" alt="Hình ảnh" />
            </td>
            <td width="20%">Tên sản phẩm:</td>
            <td width="35%" style="font-weight:bold;color:blue">@Model.TenSP</td>
        </tr>

        <tr class="text-left">
            <td>Loại sản phẩm:</td>
            <td style="color:blue">@Model.Loai.TenLoai</td>
        </tr>

        <tr class="text-left">
            <td>Mô tả:</td>
            <td>@Model.MoTa</td>
        </tr>

        <tr class="text-left">
            <td>Gia bán:</td>
            <td style="color:red;font-weight:bold">@string.Format("{0:0,0}",Model.GiaBan) VNĐ</td>
        </tr>

        <tr class="text-left">
            <td>Số lượng còn:</td>
            <td class="text-justify" style="color:red">@Model.SLTon</td>
        </tr>

        <tr>
            <td>
                <a href="@Url.Action("ThemGioHang","GioHang",new {@MaSP=Model.MaSP,@strURL=Request.Url.ToString()})">
                    <input value="MUA NGAY" class="btn btn-primary" type="submit" style="width:110px" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
                <a href="@Url.Action("SanPhamPartail","SanPham")">
                    <input value="MUA TIẾP" class="btn btn-primary" type="submit" style="width:110px"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
            </td>
        </tr>
    </table>
</div>

