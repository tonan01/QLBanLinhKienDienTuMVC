@model QLBanLinhKienDienTuMVC.Models.Loai

@{
    ViewBag.Title = "CapNhatLoai";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-info text-center">Cập Nhật Loại : @Model.MaLoai</strong>
            </div>
            <div class="col-md-6" style="text-align:end">
                <a href="@Url.Action("DanhSachLoai", "Ad_Loai")" class="btn btn-sm btn-success"><i class="fa-sharp fa-solid fa-arrow-left"></i> BACK</a>
                <button type="submit" class="btn btn-sm btn-success"><i class="fa-solid fa-floppy-disk"></i> Lưu</button>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label>Tên Loại:</label>
                    <input type="text" value="@Model.TenLoai" name="TenLoai" class="form-control" placeholder="Tên Loại" />
                    <span class="text-danger">@ViewData["Loi2"]</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>NoTe:</label>
                    <input type="text" value="@Model.NoTe" name="NoTe" class="form-control" placeholder="Nhập Note" />
                    <span class="text-danger">@ViewData["Loi3"]</span>
                </div>
            </div>
        </div>
    </div>
}

