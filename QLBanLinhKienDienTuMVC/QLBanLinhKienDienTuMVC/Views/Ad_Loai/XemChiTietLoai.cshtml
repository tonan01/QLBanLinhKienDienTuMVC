@model QLBanLinhKienDienTuMVC.Models.Loai

@{
    ViewBag.Title = "XemChiTietLoai";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-info text-center">Thông Tin Loai</strong>
            </div>
            <div class="col-md-6" style="text-align:end">

                <a href="@Url.Action("DanhSachLoai", "Ad_Loai")" class="btn btn-sm btn-success"><i class="fa-sharp fa-solid fa-arrow-left"></i> BACK</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="card bordered-dark">
            <table class="table">
                <tr>
                    <td style="text-align:center">Mã Loại:</td>
                    <td style="text-align:center">@Model.MaLoai</td>
                </tr>
                <tr>
                    <td style="text-align:center">Tên Loại:</td>
                    <td style="text-align:center">@Model.TenLoai</td>
                </tr>
                <tr>
                    <td style="text-align:center">Note:</td>
                    <td style="text-align:center">@Model.NoTe</td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:end">
                        <a href="@Url.Action("CapNhatLoai", "Ad_Loai",new {@MaLoai=Model.MaLoai })" class="btn btn-sm btn-info">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="@Url.Action("XoaLoai", "Ad_Loai",new {@MaLoai=Model.MaLoai })" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>