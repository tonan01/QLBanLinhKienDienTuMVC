
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<h3 class="text-center" style="font-weight:bold;color:blue">Đăng Ký</h3>
<table class="table">
    @using (Html.BeginForm())
    {
        //ValidationSummary hiển thị tất cả lỗi
        @Html.ValidationSummary(true)
        {
            <tr>
                <td style="text-align:right">Họ Tên KH:</td>
                <td>@Html.TextBox("Hoten", "", new { @class = "form-control" }) <span style="color:red">@ViewData["Loi1"]</span></td>
            </tr>
            <tr>
                <td style="text-align:right;">Tên Đăng nhập: </td>
                <td>@Html.TextBox("UserName", "", new { @class = "form-control" }) <span style="color:red">@ViewData["Loi2"] @ViewData["Loi7"]</span></td>
            </tr>
            <tr>
                <td style="text-align:right;">Mật Khẩu: </td>
                <td>@Html.Password("MatKhau", "", new { @class = "form-control" }) <span style="color:red">@ViewData["Loi3"] </span></td>
            </tr>
            <tr>
                <td style="text-align:right;">Nhập lại Mật khẩu: </td>
                <td>@Html.Password("ReMatkhau", "", new { @class = "form-control" }) <span style="color:red">@ViewData["Loi4"] @ViewData["Loi6"]</span></td>
            </tr>
            <tr>
                <td style="text-align:right;">Điện thoại:</td>
                <td>@Html.TextBox("DienThoai", "", new { @class = "form-control" })<span style="color:red">@ViewData["Loi5"]</span></td>
            </tr>
            <tr>
                <td style="text-align:right">Email: </td>
                <td><input type="email" name="Email"  class="form-control" /></td>
            </tr>
            <tr>
                <td style="text-align:right;"> Địa Chỉ: </td>
                <td> <input type="text" name="Diachi"  class="form-control" /></td>
            </tr>
            <tr style="text-align:center">
                <td colspan="2"><input type="submit" value="ĐĂNG KÝ" class="btn btn-primary" /></td>
            </tr>
        }
    }
</table>


