
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 style="font-weight:bold;color:blue;text-align:center">ĐĂNG NHẬP</h2>
<table class="table">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        {
            <tr>
                <td style="text-align:right">Tên Đăng Nhập:</td>
                <td>@Html.TextBox("UserName")<span style="color:red">@ViewData["Loi1"]</span></td>
            </tr>

            <tr>
                <td style="text-align:right">Mật Khẩu:</td>
                <td>@Html.Password("MatKhau")<span style="color:red">@ViewData["Loi2"]</span></td>
            </tr>

            <tr style="text-align:center">
                <td colspan="2">
                    <center> <input value="Đăng Nhập" class="sub_btn" type="submit" /></center>
                </td>
            </tr>
        }
    }
</table>
<h5 style="color:red;text-align:center">@ViewBag.TB</h5>
