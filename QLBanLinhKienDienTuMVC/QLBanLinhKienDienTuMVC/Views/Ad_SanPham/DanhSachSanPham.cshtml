@model IEnumerable<QLBanLinhKienDienTuMVC.Models.SanPham>

@{
    ViewBag.Title = "DanhSachSanPham";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">DANH SÁCH LOẠI</strong>
            </div>
            <div class="col-md-6" style="text-align:end">

                <a href="@Url.Action("ThemSanPham", "Ad_SanPham")" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i>Thêm</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead style="color:white">
                <tr style="background-color:#6610f2">
                    <th style="width:20px" class="text-center">
                        Mã Sản Phẩm
                    </th>
                    <th class="text-center">
                        Tên Sản Phẩm
                    </th>
                    <th style="width:20px" class="text-center">
                        Giá Bán
                    </th>
                    <th class="text-center">
                        Ảnh
                    </th>
                    <th style="width:20px" class="text-center">
                        SL Tồn
                    </th>
                    <th style="width:20px" class="text-center">
                        Mã Loại
                    </th>
                    <th style="width:180px" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaBan)
                    </td>
                    <td>
                        <img src="/images/@item.Anh" width="150%" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SLTon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaSP)
                    </td>
                    <td>
                        <a href="@Url.Action("CapNhatSanPham", "Ad_SanPham",new {@MaSP=item.MaSP })" class="btn btn-sm btn-info">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a href="@Url.Action("XemChiTietSanPham", "Ad_SanPham",new {@MaSP=item.MaSP })" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="@Url.Action("XoaSanPham", "Ad_SanPham",new {@MaSP=item.MaSP })" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
