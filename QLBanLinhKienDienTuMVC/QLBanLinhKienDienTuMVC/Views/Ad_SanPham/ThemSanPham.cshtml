@model QLBanLinhKienDienTuMVC.Models.SanPham

@{
                /**/

                ViewBag.Title = "ThemSanPham";
                Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-info text-center">Thêm Sản Phẩm</strong>
            </div>
            <div class="col-md-6" style="text-align:end">
                <a href="@Url.Action("DanhSachSanPham", "Ad_SanPham")" class="btn btn-sm btn-success"><i class="fa-sharp fa-solid fa-arrow-left"></i> BACK</a>
                <button type="submit" class="btn btn-sm btn-success"><i class="fa-solid fa-floppy-disk"></i> Lưu</button>
            </div>

        </div>
    </div>
    <div class="card-body p-3">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label>Tên Sản Phẩm:</label>
                    <input type="text" name="TenSP" class="form-control" placeholder="Tên sản phẩm" />
                    <span class="text-danger">@ViewData["Loi1"]</span>
                </div>
                <div class="form-group">
                    <label>Mô Tả:</label>
                    <textarea type="text" name="MoTa" class="form-control" placeholder=" Nhập Mô tả"></textarea>
                    @*<input type="text" name="MoTa" class="form-control" placeholder=" Nhập Mô tả" />*@
                </div>
                <div class="form-group">
                    <label>Ảnh:</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Chọn ảnh</span>
                        </div>
                        <div class="custom-file">
                            <input placeholder="chọn ảnh" type="file" class="custom-file-input" name="Anh" id="Anh">
                            <label class="custom-file-label" for="inputGroupFile01">Browwse</label>
                            <span class="text-danger">@ViewData["Loi3"]</span>
                        </div>
                    </div>
                    
                </div>
                
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Giá Bán:</label>
                    <input type="number" name="GiaBan" class="form-control" placeholder="Nhập giá Bán" />
                    <span class="text-danger">@ViewData["Loi2"] @ViewData["Loi5"]</span>
                </div>
                <div class="form-group">
                    <label>Số Lượng:</label>
                    <input type="number" name="SLTon" class="form-control" placeholder="Số lượng" />
                    <span class="text-danger">@ViewData["Loi4"] @ViewData["Loi6"]</span>
                </div>
                @Html.Action("DanhSachLoaiCBB", "Ad_SanPham")
            </div>
        </div>
    </div>
}

