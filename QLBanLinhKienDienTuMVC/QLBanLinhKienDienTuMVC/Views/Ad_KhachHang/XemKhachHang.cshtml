@model QLBanLinhKienDienTuMVC.Models.KhachHang
@{
    ViewBag.Title = "XemKhachHang";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-info text-center">Thông Tin Khách Hàng</strong>
            </div>
            <div class="col-md-6" style="text-align:end">

                <a href="@Url.Action("DanhSachKhachHang", "Ad_KhachHang")" class="btn btn-sm btn-success"><i class="fa-sharp fa-solid fa-arrow-left"></i> BACK</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="card bordered-dark">
            <table class="table">
                <tr>
                    <td style="text-align:right">UserName:</td>
                    <td style="text-align:center">@Model.UserName</td>
                </tr>
                <tr>
                    <td style="text-align:right">Họ Tên:</td>
                    <td style="text-align:center">@Model.HoTen</td>
                </tr>
                <tr>
                    <td style="text-align:right">Điện Thoại:</td>
                    <td style="text-align:center">@Model.DienThoai</td>
                </tr>
                <tr>
                    <td style="text-align:right">Email:</td>
                    <td style="text-align:center">@Model.Email</td>
                </tr>
                <tr>
                    <td style="text-align:right">Địa Chỉ:</td>
                    <td style="text-align:center">@Model.DiaChi</td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:end">
                        <a href="@Url.Action("CapNhatKhachHang", "Ad_KhachHang",new {@UserName=Model.UserName })" class="btn btn-sm btn-info">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="@Url.Action("XoaKhachHang", "Ad_KhachHang",new {@UserName=Model.UserName })" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

