
@using QLBanLinhKienDienTuMVC.Models
@model List<KhachHang>
@{
    ViewBag.Title = "DanhSachKhachHang";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">DANH SÁCH KHÁCH HÀNG</strong>
            </div>
            <div class="col-md-6" style="text-align:end">
                
                <a href="@Url.Action("ThemKhachHang", "Ad_KhachHang")" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i>Thêm</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead style="color:white">
                <tr style="background-color:#6610f2">
                    <th style="width:20px" class="text-center">
                        UserName
                    </th>
                    <th style="width:180px" class="text-center">
                        Họ Tên
                    </th>
                    <th style="width:20px" class="text-center">
                        Điện Thoại
                    </th>
                    <th style="width:20px" class="text-center">
                        Email
                    </th>
                    <th style="width:20px" class="text-center">
                        Địa Chỉ
                    </th>
                    <th style="width:180px" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td>
                            <a href="@Url.Action("CapNhatKhachHang", "Ad_KhachHang",new {@UserName=item.UserName })" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a href="@Url.Action("XemKhachHang", "Ad_KhachHang",new {@UserName=item.UserName })" class="btn btn-sm btn-warning">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a href="@Url.Action("XoaKhachHang", "Ad_KhachHang",new {@UserName=item.UserName })" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                            <span class="text-danger">@ViewBag.TBTrung</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

