
@{
    /**/

    ViewBag.Title = "ThemKhachHang";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="card">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        {
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-uppercase text-info text-center">Thêm Khách Hàng</strong>
                    </div>
                    <div class="col-md-6" style="text-align:end">
                        <a href="@Url.Action("DanhSachKhachHang", "Ad_KhachHang")" class="btn btn-sm btn-success"><i class="fa-sharp fa-solid fa-arrow-left"></i> BACK</a>
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa-solid fa-floppy-disk"></i> Lưu</button>
                    </div>

                </div>
            </div>
            <div class="card-body p-3">
                <table class="table">
                    <tr>
                        <td style="text-align:center;font-weight:bold">UserName:</td>
                        <td><input type="text" name="UserName" class="form-control" placeholder="Tên Người Dùng" /> <span class="text-danger">@ViewData["Loi2"] @ViewData["Loi4"]</span></td>
                    </tr>
                    <tr>
                        <td style="text-align:center;font-weight:bold">Họ Tên:</td>
                        <td><input type="text" name="HoTen" class="form-control" placeholder="Nhập Họ Tên" /> <span class="text-danger">@ViewData["Loi1"]</span></td>
                    </tr>
                    <tr>
                        <td style="text-align:center;font-weight:bold">Email:</td>
                        <td><input type="email" name="Email" class="form-control" placeholder="Nhập Email" /></td>
                    </tr>
                    <tr>
                        <td style="text-align:center;font-weight:bold">Địa Chỉ:</td>
                        <td><input type="text" name="DiaChi" class="form-control" placeholder="Nhập Đia Chỉ" /></td>
                    </tr>
                    <tr>
                        <td style="text-align:center;font-weight:bold">Số Điện Thoại:</td>
                        <td><input type="number" name="DienThoai" class="form-control" placeholder="Số Điện Thoại" /> <span class="text-danger">@ViewData["Loi3"]</span></td>
                    </tr>
                </table>
            </div>
        }
    }
</div>
